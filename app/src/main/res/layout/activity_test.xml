<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jen.leedemo.TestActivity">

    <ImageButton
        android:id="@+id/buttonPause"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/pause"/>

    <ImageButton
        android:id="@+id/buttonSound"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:background="@drawable/sound"/>

    <CheckBox
        android:id="@+id/checkbox_nyan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="60dp"
        android:text="Animate NyanCat"
        android:onClick="onCheckboxClicked"/>
    <CheckBox
        android:id="@+id/checkbox_rainbow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="30dp"
        android:text="Animate Rainbow"
        android:onClick="onCheckboxClicked"/>

    <ImageView
        android:id="@+id/nyanRainbow"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:background="@drawable/rainbow_animation"/>

    <ImageView
        android:id="@+id/nyanCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/player"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>
